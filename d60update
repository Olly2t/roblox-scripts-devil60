-- Dropdown for Player Name in MY Tab
local selectedPlayerName = nil
local playerDropdown = TabsMY:CreateDropdown({
    Name = "Select Player",
    Options = {}, -- Initially empty list
    CurrentOption = {"Select a Player"},
    MultipleOptions = false,
    Flag = "PlayerDropdown",
    Callback = function(selectedPlayer)
        selectedPlayerName = selectedPlayer
    end
})

-- Populate player dropdown
local function updatePlayerList()
    local playerList = {}
    for _, player in pairs(game.Players:GetPlayers()) do
        table.insert(playerList, player.Name)
    end
    playerDropdown:UpdateList(playerList)
    -- Set the default player selection
    if not selectedPlayerName and #playerList > 0 then
        selectedPlayerName = playerList[1]
    end
end

game.Players.PlayerAdded:Connect(updatePlayerList)
game.Players.PlayerRemoving:Connect(updatePlayerList)

-- Slider for Money Value in MY Tab
local moneySlider = TabsMY:CreateInput({
    Name = "Money Value",
    CurrentValue = "",
    PlaceholderText = "Place Money Value Here",
    RemoveTextAfterFocusLost = false,
    Flag = "Input2",
    Callback = function(Text)
        -- Update function if needed
    end
})

-- Apply Button in MY Tab
local applyButton = TabsMY:CreateButton({
    Name = "Apply Changes",
    Callback = function()
        local playerName = selectedPlayerName
        local moneyValue = tonumber(moneySlider.Text)

        if not playerName or playerName == "" then
            Rayfield:Notify({Title = "Error", Content = "Player name cannot be empty!", Duration = 3})
            return
        end

        if not moneyValue or moneyValue <= 0 then
            Rayfield:Notify({Title = "Error", Content = "Invalid money value!", Duration = 3})
            return
        end

        local function findPlayerByName(name)
            for _, player in ipairs(game.Players:GetPlayers()) do
                if player.Name == name then
                    return player
                end
            end
            return nil
        end

        local player = findPlayerByName(playerName)
        
        if player then
            game:GetService("ReplicatedStorage").MoneyRequest:FireServer(false, moneyValue, "Cash", player)
            Rayfield:Notify({Title = "Success", Content = "Money sent to player!", Duration = 3})
        else
            Rayfield:Notify({Title = "Error", Content = "Player not found!", Duration = 3})
        end
    end
})

-- Give All Money buttons
local function giveMoney(amount)
    return TabsMY:CreateButton({
        Name = "Give All " .. amount,
        Callback = function()
            local bool = false
            local remote = "Cash"
            for _, v in pairs(game.Players:GetChildren()) do
                game:GetService("ReplicatedStorage").MoneyRequest:FireServer(bool, amount, remote, v)
            end
        end
    })
end

giveMoney(1000)
giveMoney(10000)
giveMoney(100000)
giveMoney(500000)
giveMoney(1000000)
giveMoney(5000000)
giveMoney(10000000)
giveMoney(100000000)
giveMoney(500000000)
giveMoney(1000000000)
giveMoney(10000000000)
giveMoney(100000000000)

-- Theme Change Buttons
local function setTheme(themeName)
    return TabsSettings:CreateButton({
        Name = themeName,
        Callback = function()
            Window:UpdateSettings({Theme = themeName})
        end
    })
end

setTheme("Default")
setTheme("Amber Glow")
